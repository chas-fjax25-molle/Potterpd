# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 4

# JavaScript files
[*.{js,mjs,cjs}]
indent_size = 4

# JSON files
[*.json]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
